<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            type="text"
            placeholder="title goes here...."
            class="block px-5 py-2 bg-zinc-700 w-full rounded-md outline-none"
            name="title"
          />
          <textarea
            placeholder="write your task details here...."
            class="block px-5 py-2 bg-zinc-700 resize-none mt-2 w-full rounded-md outline-none"
            name="description"
          ></textarea>
          <input
            type="submit"
            value="create task"
            class="mt-2 bg-green-600 rounded-md px-5 py-2"
          />
        </form>
      </div>

      <div class="tasks p-10 flex gap-3 flex-wrap">
        <% if (files.length > 0) { %> <% files.forEach(function(val) { %>
        <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
          <div class="flex w-full justify-between items-center mt-3">
          <a href="/files/<%= val %>" class="text-blue-500 inline-block">Read More.</a>
          <a href="/edit/<%= val %>" class="text-green-500">Edit Title</a>
          </div>
        </div>
        <% }) %> <% } else { %>

        <h1 class="text-zinc-600">No tasks yet</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
